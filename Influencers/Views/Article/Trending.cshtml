@model IEnumerable<Influencers.BusinessLogic.VIewModels.ArticleViewModel>

@{
    ViewData["Title"] = "Trending";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<partial name="~/Views/Article/_ArticlesList.cshtml" model="@Model" />

@section scripts{
    <script src="~/lib/jquery-cookie/jquery.cookie.js"></script>
    <script>
        $(document).ready(function () {
            setRatingForArticles();
        });

        function setRatingForArticles() {
            @foreach (var article in Model)
            {
                @: configRating(@article.Id);
            }
        }

        function sendEmail(articleId) {
            $.ajax({
                url: "/Article/SendEmail?id=" + articleId
            });
        }

    </script>
}